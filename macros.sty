\providecommand\multiblock[2][1]{%
	\mbox{%
		\centering%
		\begingroup%
		\newcount\x%
		\foreach \c in {#2} {%
				\global\advance\x by 1%
			}%
		\pgfmathsetmacro\@scale{(#1)*0.3}%
		\raise -0.17ex\hbox{%
			\tikz[scale=0.3]{%
				\draw (0,0) rectangle (1,1);%
				\foreach \c [count=\i] in {#2} {%
						\fill[\c] (0,0) rectangle (1,1);%
						\pgfmathsetmacro{\y}{2-2*(\i/\x)}%
						\clip (0,\y) -- (\y,0) -- (0,0) -- cycle;%
					}%
			}%
		}%
		\kern -0.2em%
		\endgroup%
	}%
}
